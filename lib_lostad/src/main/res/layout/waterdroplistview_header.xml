<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:waterdrop="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal">


        <com.lostad.applib.view.widget.WaterDropView
            android:id="@+id/waterdroplist_waterdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            waterdrop:max_circle_radius = "20dp"
            waterdrop:min_circle_radius="5dp"
            waterdrop:waterdrop_color="#9ba2ab"
            waterdrop:topcircle_x="20dp"
            waterdrop:topcircle_y="20dp"
            waterdrop:bottomcircle_x="20dp"
            waterdrop:bottomcircle_y="20dp"/>

        <ProgressBar
            android:id="@+id/waterdroplist_header_progressbar"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:visibility="gone" />
    <!--</RelativeLayout>
-->
</LinearLayout>